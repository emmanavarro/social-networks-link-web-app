<h1>Contacts</h1>

<div class="table-responsive mt-3">
  <table class="table table-hover align-middle">
    <thead class="table-dark align-middle">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Location</th>
        <th>Bio</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to image_tag(user.image.variant(resize_to_fill: [100, 100]), class: 'image-list'), user.image, target: :_blank if user.image.attached? %></td>
          <td><%= user.first_name %> <%= user.last_name %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><%= user.city %>, <%= user.country %></td>
          <td><%= user.bio %></td>
          <td><%= link_to ('<i class="far fa-eye"></i>').html_safe, user, class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to ('<i class="fas fa-edit"></i>').html_safe, edit_user_path(user), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, user, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br/>

<%= link_to 'New Contact', new_user_path, class: 'btn btn-primary' %>
