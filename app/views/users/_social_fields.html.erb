<div class="nested-fields">

  <%= f.hidden_field :_destroy %>

  <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon2">Social network name</span>
    <%= f.text_field :social_network_name, class: 'form-control', placeholder: 'LinkedIn, Twitter, Instagram...' %>

    <span class="input-group-text" id="basic-addon2"><i class="fas fa-link"></i></span>
    <%= f.text_field :profile_link, class: 'form-control', placeholder: 'https://www.myscocialnetwork.com/username' %>

    <button class="btn btn-danger" type="button" id="button-addon2">
      <%= link_to ('<i class="fas fa-trash-alt"></i>').html_safe, '#', class: "remove_fields link-light" %>
    </button>
  </div>
</div>
