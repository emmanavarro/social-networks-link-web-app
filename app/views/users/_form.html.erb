<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form inputs">
    <%= f.input :first_name %>
  </div>

  <div class="form inputs">
    <%= f.input :last_name %>
  </div>

  <div class="form inputs">
    <%= f.input :phone %>
  </div>

  <div class="form inputs">
    <%= f.input :email %>
  </div>

  <div class="form inputs">
    <%= f.input :country %>
  </div>

  <div class="form inputs">
    <%= f.input :city %>
  </div>

  <div class="form inputs">
    <%= f.input :bio %>
  </div>

  <h4>Social Networks</h4>

  <table class='table'>
    <thead>
      <tr>
        <th>Social network name</th>
        <th>Profile link</th>
        <th></th>
      </tr>
    </thead>
    <tbody class='socials'>
      <%= f.simple_fields_for :socials do |builder| %>
        <%= render 'social_fields', f: builder %>
      <% end %>
    </tbody>
  </table>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to_add_association 'Add New Link', f, :socials, class: 'btn btn-primary', data: { association_insertion_node: '.socials', association_insertion_method: :append } %>
  </div>
<% end %>
